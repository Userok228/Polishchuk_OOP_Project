<Window x:Class="Jora.ChangeUsersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jora"
        mc:Ignorable="d"
        Title="ChangeUsersWindow" Height="800" Width="600">
    <Grid Width="600" Height="800">
        <Label Content="User name:" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="40" Margin="20,110,0,0" VerticalAlignment="Top" Width="388" FontFamily="Arial" FontSize="24"/>
        <TextBox x:Name="txtbx_UserName" VerticalContentAlignment="Center" HorizontalAlignment="Center" Height="40" Margin="0,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="560" FontFamily="Arial" FontSize="24"/>
        <Label Content="Login:" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="40" Margin="20,10,0,0" VerticalAlignment="Top" Width="388" FontFamily="Arial" FontSize="24"/>
        <TextBox x:Name="txtbx_Login" VerticalContentAlignment="Center" HorizontalAlignment="Center" Height="40" Margin="0,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="560" FontFamily="Arial" FontSize="24" IsReadOnly="True"/>
        <Label Content="Email:" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="40" Margin="20,210,0,0" VerticalAlignment="Top" Width="388" FontFamily="Arial" FontSize="24"/>
        <TextBox x:Name="txtbx_Email" VerticalContentAlignment="Center" HorizontalAlignment="Center" Height="40" Margin="0,250,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="560" FontFamily="Arial" FontSize="24"/>
        <Button x:Name="btn_ChangePassword" Content="Change password" HorizontalAlignment="Center" Height="70" Margin="0,504,0,0" VerticalAlignment="Top" Width="560" Background="#FFCBF1FF" FontSize="24" FontFamily="Arial" Foreground="Black" Click="btn_ChangePassword_Click"/>
        <Button x:Name="btn_Cancel" Content="Cancel" HorizontalAlignment="Left" Height="70" Margin="318,594,0,0" VerticalAlignment="Top" Width="262" Background="#FFCBF1FF" FontSize="24" FontFamily="Arial" Foreground="Black" Click="btn_Cancel_Click"/>
        <Button x:Name="btn_SaveChanges" Content="Save Changes" HorizontalAlignment="Left" Height="70" Margin="20,594,0,0" VerticalAlignment="Top" Width="262" Background="#FFCBF1FF" FontSize="24" FontFamily="Arial" Foreground="Black" Click="btn_SaveChanges_Click"/>
        <Label x:Name="lbl_OldPassword" Content="Enter your old password:" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="40" Margin="20,308,0,0" VerticalAlignment="Top" Width="388" FontFamily="Arial" FontSize="24" Visibility="Hidden"/>
        <TextBox x:Name="txtbx_OldPassword" VerticalContentAlignment="Center" HorizontalAlignment="Center" Height="40" TextWrapping="Wrap" VerticalAlignment="Top" Width="560" FontFamily="Arial" FontSize="24" Margin="0,348,0,0" Visibility="Hidden"/>
        <Label x:Name="lbl_NewPassword" Content="Enter new password:" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="40" Margin="20,410,0,0" VerticalAlignment="Top" Width="388" FontFamily="Arial" FontSize="24" Visibility="Hidden"/>
        <TextBox x:Name="txtbx_NewPassword" VerticalContentAlignment="Center" HorizontalAlignment="Center" Height="40" TextWrapping="Wrap" VerticalAlignment="Top" Width="560" FontFamily="Arial" FontSize="24" Margin="0,450,0,0" Visibility="Hidden"/>
        <Button x:Name="btn_LogOut" Content="Log out" HorizontalAlignment="Center" Height="36" Margin="0,723,0,0" VerticalAlignment="Top" Width="92" Background="{x:Null}" FontSize="24" FontFamily="Arial" Foreground="#FFF50000" Click="btn_LogOut_Click" BorderBrush="{x:Null}"/>

    </Grid>
</Window>
