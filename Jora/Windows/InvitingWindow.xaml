<Window x:Class="Jora.InvitingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jora"
        mc:Ignorable="d"
        Title="InvitingWindow" Height="400" Width="600">
    <Grid Width="600" Height="400">
        <Label x:Name="lbl_Login" Content="Enter the login of the user you want to invite:" HorizontalAlignment="Left" Height="40" Margin="10,10,0,0" VerticalAlignment="Top" Width="500" FontSize="24" FontFamily="Arial"/>
        <Button x:Name="btn_Invite" Content="Invite user" HorizontalAlignment="Left" Height="70" Margin="20,288,0,0" VerticalAlignment="Top" Width="262" Background="#FFCBF1FF" FontSize="24" FontFamily="Arial" Click="btn_Invite_Click"/>
        <TextBox x:Name="txt_login" HorizontalAlignment="Center" Height="40" Margin="0,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="580"/>
        <Button x:Name="btn_Cancel" Content="Cancel" HorizontalAlignment="Left" Height="70" Margin="320,288,0,0" VerticalAlignment="Top" Width="262" Background="#FFCBF1FF" FontSize="24" FontFamily="Arial" Click="btn_Cancel_Click"/>
        <Label x:Name="lbl_Error" Content="No user with that name found." HorizontalAlignment="Center" Height="40" Margin="0,243,0,0" VerticalAlignment="Top" Width="572" Foreground="Red" FontSize="22" FontFamily="Arial" Visibility="Hidden"/>
        <Button x:Name="btn_Member" Content="Member" HorizontalAlignment="Left" Height="70" Margin="14,150,0,0" VerticalAlignment="Top" Width="130" Background="#FFCBF1FF" FontSize="24" FontFamily="Arial" Click="btn_Member_Click"/>
        <Button x:Name="btn_Guest" Content="Guest" HorizontalAlignment="Left" Height="70" Margin="160,150,0,0" VerticalAlignment="Top" Width="130" Background="#FFCBF1FF" FontSize="24" FontFamily="Arial" RenderTransformOrigin="0.389,0.499" Click="btn_Guest_Click"/>
        <Label Content="Select a user role:" HorizontalAlignment="Center" Height="40" Margin="0,110,0,0" VerticalAlignment="Top" Width="572" Foreground="Black" FontSize="22" FontFamily="Arial"/>

    </Grid>
</Window>
