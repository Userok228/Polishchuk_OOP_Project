<Window x:Class="Jora.TaskInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jora"
        mc:Ignorable="d"
        Title="TaskInfoWindow" Height="800" Width="600">
    <Grid Width="600" Height="800">
        <Label Content="Task name:" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="40" Margin="20,20,0,0" VerticalAlignment="Top" Width="136" FontFamily="Arial" FontSize="24"/>
        <TextBox x:Name="txtbx_Name" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="40" Margin="20,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="560" FontFamily="Arial" FontSize="24" IsReadOnly="True"/>
        <Label Content="Task description:" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="40" Margin="20,120,0,0" VerticalAlignment="Top" Width="210" FontFamily="Arial" FontSize="24"/>
        <TextBox x:Name="txtbx_Description" TextWrapping="Wrap" HorizontalScrollBarVisibility="Auto" HorizontalAlignment="Center" Height="160" Margin="0,160,0,0" VerticalAlignment="Top" Width="560" FontFamily="Arial" FontSize="24" IsReadOnly="True"/>
        <Label Content="Creation Date:" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="40" Margin="20,340,0,0" VerticalAlignment="Top" Width="270" FontFamily="Arial" FontSize="24"/>
        <TextBox x:Name="txtbx_CreationDate" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="40" TextWrapping="Wrap" VerticalAlignment="Center" Width="270" FontFamily="Arial" FontSize="24" Margin="20,0,0,0" IsReadOnly="True"/>
        <TextBox x:Name="txtbx_Deadline" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="40" TextWrapping="Wrap" VerticalAlignment="Center" Width="270" FontFamily="Arial" FontSize="24" Margin="310,0,0,0" IsReadOnly="True"/>
        <Label Content="Deadline:" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="40" Margin="309,340,0,0" VerticalAlignment="Top" Width="271" FontFamily="Arial" FontSize="24"/>
        <Label Content="Creation Date:" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="40" Margin="20,340,0,0" VerticalAlignment="Top" Width="270" FontFamily="Arial" FontSize="24"/>
        <Label Content="Task Priority:" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="40" Margin="20,440,0,0" VerticalAlignment="Top" Width="270" FontFamily="Arial" FontSize="24"/>
        <Button x:Name="btn_Priority1" Content="1" HorizontalAlignment="Left" Height="80" Margin="28,485,0,0" VerticalAlignment="Top" Width="120" Background="#FFBFECFD" FontSize="32" FontFamily="Arial" IsHitTestVisible="False" Click="btn_Priority1_Click"/>
        <Button x:Name="btn_Priority2" Content="2" HorizontalAlignment="Left" Height="80" Margin="170,485,0,0" VerticalAlignment="Top" Width="120" Background="#FF8CE0FF" FontFamily="Arial" BorderThickness="1,1,1,1" FontSize="32" IsHitTestVisible="False" Click="btn_Priority2_Click"/>
        <Button x:Name="btn_Priority3" Content="3" HorizontalAlignment="Left" Height="80" Margin="310,485,0,0" VerticalAlignment="Top" Width="120" Background="#FF00BAFF" FontSize="32" FontFamily="Arial" IsHitTestVisible="False" Click="btn_Priority3_Click"/>
        <Button x:Name="btn_Ok" Content="OK" HorizontalAlignment="Left" Height="70" Margin="28,690,0,0" VerticalAlignment="Top" Width="544" Background="#FFCBF1FF" FontSize="24" FontFamily="Arial" Click="btn_Ok_Click"/>
        <Label Content="Note: Only the leader can change the task parameters." HorizontalAlignment="Left" Height="37" Margin="28,570,0,0" VerticalAlignment="Top" Width="507" FontSize="20" FontFamily="Arial"/>
        <Button x:Name="btn_DeleteTask" Content="Delete task" HorizontalAlignment="Left" Height="70" Margin="309,690,0,0" VerticalAlignment="Top" Width="262" Background="#FFCBF1FF" FontSize="24" FontFamily="Arial" Click="btn_DeleteTask_Click" Foreground="Red" Visibility="Hidden"/>

    </Grid>
</Window>
