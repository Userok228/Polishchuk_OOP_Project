<Window x:Class="Jora.ChangingProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jora"
        mc:Ignorable="d"
        Title="ChangingProjectWindow" Height="800" Width="600">
    <Grid Width="600" Height="800">
        <Label Content="Project name:" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="40" Margin="10,10,0,0" VerticalAlignment="Top" Width="388" FontFamily="Arial" FontSize="24"/>
        <TextBox x:Name="txtbx_Name" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="40" Margin="10,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="560" FontFamily="Arial" FontSize="24"/>
        <Label Content="Project description:" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="40" Margin="10,122,0,0" VerticalAlignment="Top" Width="217" FontFamily="Arial" FontSize="24"/>
        <TextBox x:Name="txtbx_Description" TextWrapping="Wrap" HorizontalScrollBarVisibility="Auto" HorizontalAlignment="Left" Height="160" Margin="10,162,0,0" VerticalAlignment="Top" Width="560" FontFamily="Arial" FontSize="24"/>
        <Label Content="Project deadline:" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="40" Margin="10,360,0,0" VerticalAlignment="Top" Width="189" FontFamily="Arial" FontSize="24"/>
        <TextBox x:Name="txtbx_Deadline" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="40" Margin="10,400,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="560" FontFamily="Arial" FontSize="24"/>
        <Button x:Name="btn_DeleteProject" Content="Delete project" HorizontalAlignment="Center" Height="70" Margin="0,690,0,0" VerticalAlignment="Top" Width="560" Background="#FFCBF1FF" FontSize="24" FontFamily="Arial" Foreground="Red" Click="btn_DeleteProject_Click"/>
        <Button x:Name="btn_Cancel" Content="Cancel" HorizontalAlignment="Left" Height="70" Margin="318,602,0,0" VerticalAlignment="Top" Width="262" Background="#FFCBF1FF" FontSize="24" FontFamily="Arial" Foreground="Black" Click="btn_Cancel_Click"/>
        <Button x:Name="btn_SaveChanges" Content="Save Changes" HorizontalAlignment="Left" Height="70" Margin="20,602,0,0" VerticalAlignment="Top" Width="262" Background="#FFCBF1FF" FontSize="24" FontFamily="Arial" Foreground="Black" Click="btn_SaveChanges_Click"/>
        <Label Content="Project creation date (cannot be changed):" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="40" Margin="10,474,0,0" VerticalAlignment="Top" Width="464" FontFamily="Arial" FontSize="24"/>
        <TextBox x:Name="txtbx_CreationDate" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="40" Margin="10,514,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="560" FontFamily="Arial" FontSize="24" IsReadOnly="True"/>

    </Grid>
</Window>
